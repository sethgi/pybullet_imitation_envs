<?xml version="1.0" ?>
<robot name="t_object">

  <!-- Base link: vertical stem -->
  <link name="stem">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.5"/>
      <inertia ixx="0.005" ixy="0" ixz="0" iyy="0.005" iyz="0" izz="0.005"/>
    </inertial>

    <visual>
      <origin xyz="0 -0.05 0.025" rpy="0 0 0"/>
      <geometry>
        <box size="0.05 0.10 0.05"/>
      </geometry>
      <material name="blue">
        <color rgba="0.1 0.1 0.8 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 -0.05 0.025" rpy="0 0 0"/>
      <geometry>
        <box size="0.05 0.10 0.05"/>
      </geometry>
    </collision>
  </link>

  <!-- Crossbar link -->
  <link name="crossbar">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.5"/>
      <inertia ixx="0.005" ixy="0" ixz="0" iyy="0.005" iyz="0" izz="0.005"/>
    </inertial>

    <visual>
      <origin xyz="0 0.025 0.025" rpy="0 0 0"/>
      <geometry>
        <box size="0.15 0.05 0.05"/>
      </geometry>
      <material name="green">
        <color rgba="0.1 0.8 0.1 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0.025 0.025" rpy="0 0 0"/>
      <geometry>
        <box size="0.15 0.05 0.05"/>
      </geometry>
    </collision>
  </link>

  <!-- Fixed joint attaching crossbar to stem -->
  <joint name="stem_to_crossbar" type="fixed">
    <parent link="stem"/>
    <child link="crossbar"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

</robot>
